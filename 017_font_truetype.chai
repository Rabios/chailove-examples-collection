// Example: Using a truetype font

def load() {
  // Create a new font with 32pt size and set it as default.
  var f = love.graphics.newFont("assets/Grundschrift-Normal.otf", 24)
  love.graphics.setFont(f)
}

global text = love.filesystem.read("text.txt")

def draw() {
  // Print the text
  love.graphics.print(text, 50, 50)
}